<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.lockstylist.MainActivity"
    android:background="#F5F5F5">


<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LOCK STYLIST HOUSE"
    android:textStyle="bold"
    android:textSize="36sp"
    android:textColor="#000000"
    android:fontFamily="sans-serif-condensed"
    android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/text1"
        android:orientation="horizontal"
        android:id="@+id/layout1">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/text1"
            android:layout_weight="1"
            android:src="@drawable/hairrrrr" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image1"
            android:layout_weight="1"
            android:src="@drawable/hairrrr"
/>
    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:text="At Lock House we offer quality services for the best locks."
        android:textSize="24sp"
        android:textStyle="italic"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Working hours: 7:00am to 10:00pm"
        android:layout_below="@id/text2"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:text="Contact:"
        android:textSize="24sp"
        android:textColor="#212121"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:paddingTop="0dp"
        android:paddingLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text3"
        android:orientation="horizontal"
        android:id="@+id/layout2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_local_phone_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+254712202001"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_email_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lockhouse@gmail.com"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location_on_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250, Kindaruma Road, Nairobi"
            android:textSize="24sp"/>

    </LinearLayout>



</RelativeLayout>
